<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="limeandlemon.knowyourtimeline.Game"
    android:background="@color/pager_background">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/frameLayout"
        android:background="#ff35c2ff"
        android:layout_alignParentTop="true" >

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/frameLayout2"
        android:background="#ff0787ff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ranking"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textColor="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:id="@+id/textView2"
            android:layout_gravity="right|top"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textColor="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txtRanking"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="5dp"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txtScore"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:textSize="30dp" />

    </FrameLayout>

    <util.CircularImageView
        app:border="true"
        app:border_color="@color/text"
        app:border_width="2dp"
        app:shadow="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/iv_photoUser"
        android:src="@drawable/photo_user_no"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_centerInParent="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/frameLayout"
        android:id="@+id/frameLayoutPregunta">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:text="New Text"
                    android:id="@+id/txtPregunta"
                    android:textSize="20dp"
                    android:textColor="#ff3588ff"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="left|center_vertical|right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearRespuestas"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"></LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
